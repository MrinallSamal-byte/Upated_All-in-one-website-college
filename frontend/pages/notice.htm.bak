<!DOCTYPE html>
<html lang="en">
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
      }
      table {
        width: 100%;
        max-width: 600px;
        margin: auto;
      }
      @media (max-width: 600px) {
        table,
        th,
        td {
          font-size: 14px;
        }
        ul {
          padding: 0 10px;
        }
        .dark-toggle {
          position: static;
          width: 100%;
        }
      }
    </style>
    <!-- Add this to the <head> section of each .htm file -->
    <style>
      body.dark-mode {
        background: #222;
        color: #eee;
      }
      table.dark-mode,
      th.dark-mode,
      td.dark-mode {
        background: #333;
        color: #eee;
      }
      .dark-toggle {
        position: fixed;
        top: 10px;
        right: 10px;
        padding: 8px 16px;
        background: #444;
        color: #fff;
        border: none;
        cursor: pointer;
        z-index: 1000;
      }
    </style>
    <meta charset="UTF-8" />
    <title>Notice Board</title>
  </head>
  <body>
    <!-- Add this to the <body> section of each .htm file -->
    <button class="dark-toggle" onclick="toggleDarkMode()">
      ðŸŒ™ Toggle Dark Mode
    </button>
    <script>
      function toggleDarkMode() {
        document.body.classList.toggle("dark-mode");
        document
          .querySelectorAll("table, th, td")
          .forEach((el) => el.classList.toggle("dark-mode"));
        localStorage.setItem(
          "darkMode",
          document.body.classList.contains("dark-mode")
        );
      }
      // On page load, set dark mode if previously enabled
      if (localStorage.getItem("darkMode") === "true") {
        document.body.classList.add("dark-mode");
        document
          .querySelectorAll("table, th, td")
          .forEach((el) => el.classList.add("dark-mode"));
      }
    </script>
    <h2>Notice Board</h2>
    <ul id="noticeList"></ul>
    <script src="https://cdn.socket.io/4.0.0/socket.io.min.js"></script>
    <script>
      // Initialize Socket.io
      const socket = io("http://localhost:5000");
      const registerNo = localStorage.getItem("registerNo");
      
      // Register for notifications
      socket.emit('registerStudent', registerNo);
      
      // Listen for new notices
      socket.on("newNotice", (data) => {
        // Show notification
        if ("Notification" in window && Notification.permission === "granted") {
          new Notification("New Notice", {
            body: `New notice: ${data.title}`,
            icon: "/favicon.ico"
          });
        }
        
        // Refresh notices
        fetchNotices();
      });
      
      // Request notification permission
      if ("Notification" in window) {
        Notification.requestPermission();
      }
      
      // Initial fetch
      fetchNotices();
      
      function fetchNotices() {
        fetch("http://localhost:5000/api/notices")
          .then((res) => res.json())
          .then((data) => {
            const ul = document.getElementById("noticeList");
            ul.innerHTML = '';
            data.forEach((notice) => {
              ul.innerHTML += `<li>
              <strong>${notice.title}</strong>: ${notice.message} <em>(${notice.posted_at})</em>
            </li>`;
            });
          });
      }
    </script>
  </body>
</html>
