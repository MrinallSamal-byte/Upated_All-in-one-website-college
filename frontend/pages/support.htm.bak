<!DOCTYPE html>
<html lang="en">
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
      }
      table {
        width: 100%;
        max-width: 600px;
        margin: auto;
      }
      @media (max-width: 600px) {
        table,
        th,
        td {
          font-size: 14px;
        }
        ul {
          padding: 0 10px;
        }
        .dark-toggle {
          position: static;
          width: 100%;
        }
      }
    </style>
    <!-- Add this to the <head> section of each .htm file -->
    <style>
      body.dark-mode {
        background: #222;
        color: #eee;
      }
      table.dark-mode,
      th.dark-mode,
      td.dark-mode {
        background: #333;
        color: #eee;
      }
      .dark-toggle {
        position: fixed;
        top: 10px;
        right: 10px;
        padding: 8px 16px;
        background: #444;
        color: #fff;
        border: none;
        cursor: pointer;
        z-index: 1000;
      }
    </style>
    <meta charset="UTF-8" />
    <title>Help & Support</title>
  </head>
  <body>
    <!-- Add this to the <body> section of each .htm file -->
    <button class="dark-toggle" onclick="toggleDarkMode()">
      ðŸŒ™ Toggle Dark Mode
    </button>
    <script>
      function toggleDarkMode() {
        document.body.classList.toggle("dark-mode");
        document
          .querySelectorAll("table, th, td")
          .forEach((el) => el.classList.toggle("dark-mode"));
        localStorage.setItem(
          "darkMode",
          document.body.classList.contains("dark-mode")
        );
      }
      // On page load, set dark mode if previously enabled
      if (localStorage.getItem("darkMode") === "true") {
        document.body.classList.add("dark-mode");
        document
          .querySelectorAll("table, th, td")
          .forEach((el) => el.classList.add("dark-mode"));
      }
    </script>
    <h2>Help & Support</h2>
    <form id="supportForm">
      <textarea
        id="message"
        placeholder="Type your issue here..."
        required
      ></textarea
      ><br />
      <button type="submit">Send</button>
    </form>
    <div id="result"></div>
    <script>
      const registerNo = localStorage.getItem("registerNo");
      document.getElementById("supportForm").onsubmit = async (e) => {
        e.preventDefault();
        const message = document.getElementById("message").value;
        const res = await fetch("http://localhost:5000/api/support", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ registerNo, message }),
        });
        const data = await res.json();
        document.getElementById("result").innerText =
          data.message || data.error;
      };
    </script>
  </body>
</html>
